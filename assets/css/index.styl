$heading = #DEDBD7;
$light-background = #FAF8F7;
$field-label = #8F8A85;
$dark-text = #4d4d4a;

.app-padding {
  padding: 20px;
}

.favorites {
  height: 200px;
  li {
    div:first-child {
      float: left;
    }
    div:last-child {
      margin-left: 20px;
      background-color: $light-background;
      padding: 3px;
      float: right;
    }
    overflow: auto;
    padding: 5px 0 0 5px;
    margin-bottom: 5px;
  }
  .selected {
    background-color: $light-background;
  }
}

.feed > ul > li {
  //border: 1px solid red;
  min-height: 100px;
}

.feed {
  border-left: 1px solid black;
  border-right: 1px solid black;
  .notification {
    overflow: auto;
    .content {
      margin-top: 20px;
    }

    .details {
      li {
        div:first-child {
          text-align: right;
          color: $field-label;
        }
        div:last-child {
          color: $dark-text;
        }
        div {
          min-height: 20px;
        }
        overflow: auto;
      }
    }
  }
}

.aux {
  height: 100%;
  .chat {
    .chat-window {
      height: 400px;
      border: 1px solid green;
      .friend {
        color: red;
      }
      .myself {
        color: green;
      }
    }
  }
}

