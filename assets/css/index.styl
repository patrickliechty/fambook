.span1, .span2, .span3, .span4, .span5, .span6, .span7, .span8, .span9, .span10, .span11, .span12 {
  overflow: auto;
}

.spinner {
  text-align: center;
  padding-top: 200px;
  background: url(loading.gif) no-repeat 50% 50%;
}
