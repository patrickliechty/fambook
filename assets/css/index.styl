.app-padding {
  padding: 20px;
}

.favorites {
  border: 1px solid black;
  height: 200px;
  li {
    div:first-child {
      float: left;
    }
    div:last-child {
      margin-left: 20px;
      background-color: green;
      color: white;
      padding: 3px;
      float: right;
    }
    overflow: auto;
    padding-bottom: 5px;
  }
}

.feed > ul > li {
  //border: 1px solid red;
  min-height: 100px;
}

.feed {
  border: 1px solid black;
  .notification {
    overflow: auto;
    .content {
      margin-top: 20px;
    }

    .details {
      li {
        div:first-child {
          text-align: right;
          color: #8f8a85;
        }
        div:last-child {
          color: #4d4d4a;
        }
        div {
          min-height: 20px;
        }
        overflow: auto;
      }
    }
  }
}

.aux {
  border: 1px solid black;
  height: 100%;
}

